unit UnitFlyuidMatLib;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls, CheckLst;

type
  TFormFluidLibMat = class(TForm)
    GBFluidMatLib: TGroupBox;
    LFluidMatLib: TLabel;
    CheckListBoxFluidMatLib: TCheckListBox;
    BApply: TButton;
    procedure BApplyClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FormFluidLibMat: TFormFluidLibMat;

implementation
 uses
     VisualUnit, addBlockUnit;
{$R *.dfm}

// Нажатие на кнопку Apply-применить
// Выбор билиотечного материала.
procedure TFormFluidLibMat.BApplyClick(Sender: TObject);
var
    i, ipos : Integer;
    b1,bok : Boolean;
begin
   b1:=true;
   bok:=false;
   ipos:=-1;
   for i:=0 to CheckListBoxFluidMatLib.Items.Count-1 do // запуск цикла
   if CheckListBoxFluidMatLib.Checked[i] then
   begin
      if (not(b1))  then
      begin
         bok:=false;
      end
      else
      begin
         bok:=true;
         ipos:=i;
      end;
      b1:=false;
   end;
   if (bok)  then
   begin
      // Выделен только один билиотечный материал
      with Laplas.body[Laplas.itek] do
      begin
         //
         blibmat:=1; // означает что это библиотечный материал
         ilibident:=1+ipos; // номер библиотечного материала в соответствии с заданным
         bBoussinesq:=0; // Для библиотечного материала приближение Обербека-Буссинеска не используется.
         // внутри кода AliceFlowv0_06.
      end;
   end
   else
   begin
      Application.MessageBox('Material is not selected or choose more than one material','Input Error! Repeat the selection. ')
   end;

end;

end.
