unit UnitSolidMatLib;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls, CheckLst;

type
  TFormSolidLibMat = class(TForm)
    GBSelectMat: TGroupBox;
    CLBSolidMatLib: TCheckListBox;
    BApply: TButton;
    LMessage1: TLabel;
    procedure BApplyClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FormSolidLibMat: TFormSolidLibMat;

implementation
uses
     VisualUnit, addBlockUnit;
{$R *.dfm}

// Ќажатие на кнопку Apply-применить
// ¬ыбор билиотечного материала.
procedure TFormSolidLibMat.BApplyClick(Sender: TObject);
var
    i, ipos : Integer;
    b1,bok : Boolean;
begin
   b1:=true;
   bok:=false;
   ipos:=-1;
   for i:=0 to CLBSolidMatLib.Items.Count-1 do // запуск цикла
   if CLBSolidMatLib.Checked[i] then
   begin
      if (not(b1))  then
      begin
         bok:=false;
      end
      else
      begin
         bok:=true;
         ipos:=i;
      end;
      b1:=false;
   end;
   if (bok)  then
   begin
      // ¬ыделен только один билиотечный материал
      with Laplas.body[Laplas.itek] do
      begin
         //
         blibmat:=1; // означает что это библиотечный материал
         ilibident:=101+ipos; // номер библиотечного материала в соответствии с заданным
         // внутри кода AliceFlowv0_06.
      end;
   end
   else
   begin
      Application.MessageBox('Material is not selected or choose more than one material','Input Error! Repeat the selection. ')
   end;
end;

end.
